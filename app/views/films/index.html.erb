<p id="notice"><%= notice %></p>

<h1>Listing Films</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Director</th>
      <th>Note   </th>
      <th>Synopsis</th>
      <th>Cinema</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
	<td><%= image_tag(film.image, width:250, height:250) %></td> 
        <td><%= film.title %></td>
        <td><%= film.director %></td>
        <td><%= film.moyenne %></td>
        <td><%= film.synopsis %></td>
	<td><%= Cinema.find(film.cinema_id).name %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

