<p id="notice"><%= notice %></p>



<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Director:</strong>
  <%= @film.director %>
</p>

<table>
  <thead>
    <tr>
      <th>Spectateur: </th>
      <th>Notes: </th>
    </tr>
  </thead>

  <tbody>
    <% @film.notes.each do |h| %>
      <tr>
	<td><%= Spectateur.find(h.spectateur_id).name %></td>
        <td><%= h.value %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<p>
	<strong>Moyenne: </strong>
	<%= @film.moyenne %>
</p>

<p>
  <strong>Cinema: </strong>
  <%= Cinema.find(@film.cinema_id).name %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @film.synopsis %>
</p>


<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
